def start_game():
    print("Welcome to the Adventure!")
    print("You find yourself at the entrance of a dark forest.")
    choice1 = input("Do you go left towards the light or right into the darkness? (left/right): ").lower()

    if choice1 == "left":
        print("\nYou walk towards the light and find a peaceful village. You are safe! âœ…")
    elif choice1 == "right":
        print("\nYou enter the darkness and encounter a wild beast!")
        choice2 = input("Do you fight or run? (fight/run): ").lower()
        if choice2 == "fight":
            print("\nYou bravely fight the beast and win! ğŸ—¡ï¸ You are a hero!")
        elif choice2 == "run":
            print("\nYou run as fast as you can and escape the forest safely. ğŸƒâ€â™‚ï¸")
        else:
            print("\nInvalid choice. The beast catches you. Game over. âŒ")
    else:
        print("\nInvalid choice. You stand still and the forest swallows you. Game over. âŒ")

# Start the game
start_game()
